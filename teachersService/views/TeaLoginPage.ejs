        <%- include("partials/LoginPageFlashPartial.ejs") %>
        <h1 class="text-center">Teacher's Login</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title" >Teacher ID</label>
